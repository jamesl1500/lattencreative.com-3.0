# Strapi API Environment Configuration
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# Server Configuration
HOST=0.0.0.0
PORT=1337
NODE_ENV=production

# Proxy Configuration (set to true if behind AWS ALB/CloudFront)
IS_PROXIED=true
PUBLIC_URL=https://api.lattencreative.com

# SSL Configuration
NODE_TLS_REJECT_UNAUTHORIZED=0  # Only for development - remove in production
SSL_CERT_PATH=/etc/letsencrypt/live/api.lattencreative.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/api.lattencreative.com/privkey.pem

# Application Keys (generate 4 random strings)
APP_KEYS="generate-random-key-1,generate-random-key-2,generate-random-key-3,generate-random-key-4"

# JWT & Token Secrets (generate random strings)
API_TOKEN_SALT=generate-random-api-token-salt
ADMIN_JWT_SECRET=generate-random-admin-jwt-secret
TRANSFER_TOKEN_SALT=generate-random-transfer-token-salt
JWT_SECRET=generate-random-jwt-secret
ENCRYPTION_KEY=generate-random-encryption-key

# Database Configuration
DATABASE_CLIENT=mysql
DATABASE_HOST=127.0.0.1
DATABASE_PORT=3306
DATABASE_NAME=lattencreative.com
DATABASE_USERNAME=your-db-username
DATABASE_PASSWORD=your-db-password
DATABASE_SSL=false

# Email Configuration (optional)
EMAIL_PROVIDER=sendgrid
EMAIL_PROVIDER_DEFAULT_FROM=hello@lattencreative.com
EMAIL_PROVIDER_DEFAULT_REPLY_TO=hello@lattencreative.com
SENDGRID_API_KEY=your-sendgrid-api-key

# File Upload Configuration (optional)
# For local uploads
UPLOAD_PROVIDER=local

# For Cloudinary (uncomment if using)
# CLOUDINARY_NAME=your-cloudinary-name
# CLOUDINARY_KEY=your-cloudinary-key
# CLOUDINARY_SECRET=your-cloudinary-secret

# For AWS S3 (uncomment if using)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_ACCESS_SECRET=your-aws-secret-key
# AWS_REGION=us-east-1
# AWS_BUCKET=your-bucket-name

# Security
CORS_ENABLED=true
CORS_CREDENTIALS=true
CORS_ORIGIN=https://lattencreative.com,https://www.lattencreative.com
